<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProgress.View.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryLogin"
                Placeholder="Digite seu login" PlaceholderColor="LightGray"
                VerticalOptions="Center" 
                HorizontalOptions="Fill" />
            <Entry x:Name="entryPassword" IsPassword="True"
                Placeholder="Digite sua senha" PlaceholderColor="LightGray"
                VerticalOptions="Center" 
                HorizontalOptions="Fill" />
            <Button x:Name="btnLogin" Text="Logar"
                VerticalOptions="Center" 
                HorizontalOptions="Fill" />
            <Button x:Name="btnRegistrar" Text="Registrar-se"
                VerticalOptions="Center" 
                HorizontalOptions="Fill" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>